<h1>Records</h1>
<div class="row">
{{#each model as |record|}}
    <div class="col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">{{record.artist}}</h3>
        </div>
        <div>
            <image src={{record.thumbnail}}/>
            <p>Artist:{{record.title}}</p>
            <p>Year:{{record.year}}</p>
        </div>
        <div class="panel-footer text-right">
            {{#link-to 'records.edit' record.id class="btn btn-success btn-xs"}}
                Edit
            {{/link-to}}
            <button class="btn btn-danger btn-xs" {{action 'deleteRecord' record}}>Delete</button>
        </div>
    </div>
</div>
{{/each}}
</div>